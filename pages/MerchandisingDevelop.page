	function createArrowHead(points, color) {
		var headLength = 15,

				x1 = points[0],
				y1 = points[1],
				x2 = points[2],
				y2 = points[3],

				dx = x2 - x1,
				dy = y2 - y1,

				angle = Math.atan2(dy, dx);

		angle *= 180 / Math.PI;
		angle += 90;

		var triangle = new fabric.Triangle(
			{
				angle: angle,
				fill: color,
				top: y2,
				left: x2,
				height: headLength,
				width: headLength,
				originX: 'center',
				originY: 'center'
			}
		);

		return triangle;
	}

